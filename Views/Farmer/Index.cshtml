@{
    ViewData["Title"] = "Farmer Dashboard";
}


@*Farmer Dashboard for them to navigate from*@
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h2>Farmer Dashboard</h2>
                </div>

                <div class="card-body">
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        My Products
                                    </h5>
                                    <p class="card-text">View all products..</p>
                                    <a asp-action="ViewMyProducts" asp-route-farmerId="@User.FindFirst("FarmerId")?.Value" class="btn btn-outline-success">View Products</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Add Product
                                    </h5>
                                    <p class="card-text">Add a product</p>
                                    <a asp-action="AddProduct" class="btn btn-outline-success">Add new Product</a>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Marketplace
                                    </h5>
                                    <a asp-action="MarketPlace" class="btn btn-outline-success">Marketplace</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

